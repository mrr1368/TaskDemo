@using System.Globalization
@model List<TaskDemo.ViewModel.CreatePaymentRequestViewModel>


<div class="container my-5" dir="rtl">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center fw-bold mb-5 text-success">
                📋 لیست درخواست‌های وجه ثبت‌شده
            </h2>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12 text-end">
            <a href="/payment-create" class="btn btn-success px-4 py-2 rounded-pill shadow-sm fw-bold">
                <i class="bi bi-plus-circle me-2"></i> ثبت درخواست جدید
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-11">
            <div class="bg-white rounded-4 shadow-lg p-4 w-100 mx-auto" style="max-width: 1100px;">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle text-center">
                            <thead class="table-success">
                                <tr>
                                    <th>تاریخ</th>
                                    <th>شماره فرم</th>
                                    <th>ذی‌نفع</th>
                                    <th>مبلغ (تومان)</th>
                                    <th>بانک / شعبه</th>
                                    <th>علت پرداخت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.RequestDate</td>
                                        <td>@item.FormNumber</td>
                                        <td>@item.RecipientName</td>
                                        <td>@item.AmountNumeric.ToString("N0")</td>
                                        <td>@item.BankAndBranch</td>
                                        <td>@item.PaymentReason</td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2 flex-wrap">
                                                <a class="btn btn-warning btn-sm d-flex align-items-center disabled">
                                                    <i class="bi bi-pencil-square me-1"></i>
                                                </a>
                                                <a class="btn btn-danger btn-sm d-flex align-items-center disabled">
                                                    <i class="bi bi-trash-fill me-1"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning text-center fs-5 rounded-3">
                        <i class="bi bi-info-circle"></i> هیچ درخواستی ثبت نشده است.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
